<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.bhxx.goldenstraw.activity.VerifySignActivity">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@drawable/round_corner_write_6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100px"
            android:background="@drawable/dialog_round_corner_app_top"
            android:gravity="center"
            android:text="借款协议"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:layout_marginTop="@dimen/height_40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="借款人:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:id="@+id/verifySign_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="借款金额:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="借款时长:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="综合费用:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

            <ImageView
                android:id="@+id/verifySign_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:src="@mipmap/icon_pro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="还款方式:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="还款日期:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80px"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_140px"
                android:layout_height="wrap_content"
                android:text="逾期政策:"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:text="汪洋琴"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

            <ImageView
                android:id="@+id/verifySign_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:src="@mipmap/icon_pro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/com_left_right"
            android:layout_marginLeft="@dimen/height_100px"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我同意" />

            <TextView
                android:id="@+id/VerifySign_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《某某借款协议》"
                android:textColor="@color/app_grey" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/verifySign_nextStep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:layout_marginLeft="@dimen/height_40px"
        android:layout_marginRight="@dimen/height_40px"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@drawable/round_corner_app"
        android:gravity="center"
        android:text="确认打款"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_34px" />

</LinearLayout>
