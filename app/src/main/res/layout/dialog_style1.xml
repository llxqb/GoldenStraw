<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_corner_white"
    android:orientation="vertical">

    <!--dialog样式1：图片  文字  底部按钮 -->

    <ImageView
        android:id="@+id/dialog_style1_img"
        android:layout_width="@dimen/height_100px"
        android:layout_height="@dimen/height_100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_40px"
        android:src="@mipmap/icon_success"
        />

    <TextView
        android:id="@+id/dialog_style1_centerTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_70px"
        android:gravity="center_horizontal"
        android:textColor="@color/text_9999"
        android:textSize="@dimen/sp_34px" />

    <TextView
        android:id="@+id/dialog_style1_buttonTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100px"
        android:layout_marginTop="@dimen/height_60px"
        android:background="@drawable/dialog_round_corner_app_buttom"
        android:gravity="center"
        android:text="继续"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_40px" />
</LinearLayout>
