<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.bhxx.goldenstraw.activity.LoginActivity">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300px"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/height_30px">

        <TextView
            android:layout_width="@dimen/height_200px"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_32px" />

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="@color/text_9999"
            android:textColorHint="@color/text_9999"
            android:textSize="@dimen/sp_30px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/height_30px">

        <TextView
            android:layout_width="@dimen/height_200px"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_32px" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/text_9999"
            android:textColorHint="@color/text_9999"
            android:textSize="@dimen/sp_30px" />

        <com.bhxx.goldenstraw.views.TimeButton
            android:id="@+id/code_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="@color/app_grey"
            android:textSize="@dimen/sp_30px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/height_30px">

        <TextView
            android:layout_width="@dimen/height_200px"
            android:layout_height="wrap_content"
            android:text="邀请码"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_32px" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@null"
            android:hint="如果有，请输入邀请码"
            android:textColor="@color/text_9999"
            android:textColorHint="@color/text_9999"
            android:textSize="@dimen/sp_30px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_30px"
        android:layout_marginTop="@dimen/com_left_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我同意"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《借款服务于隐私协议》"
            android:textColor="@color/app_grey"
            android:textSize="@dimen/sp_30px" />
    </LinearLayout>

    <TextView
        android:id="@+id/LoginTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:layout_marginLeft="@dimen/height_40px"
        android:layout_marginRight="@dimen/height_40px"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@drawable/press_btn_nextstep"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_10px"
        android:gravity="center_horizontal"
        android:text="已更换手机号？" />
</LinearLayout>
