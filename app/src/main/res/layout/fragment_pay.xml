<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res/com.bhxx.goldenstraw"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:orientation="vertical"
    tools:context="com.bhxx.goldenstraw.fragment.VerifyidentityHumanCheckFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/com_left_right"
            android:gravity="center"
            android:text="距还款日"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />

        <com.bhxx.goldenstraw.views.MyCircleProgress
            android:id="@+id/pay_circleProgress"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/com_left_right"
            circle:roundWidth="10dp"
            circle:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/com_left_right"
            android:gravity="center"
            android:text="提前还款信用增值哦！"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/com_left_right"
            android:orientation="horizontal"
            android:padding="@dimen/com_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款金额"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:id="@+id/pay_totalMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_200px"
                android:text="525元"
                android:textColor="@color/app_grey"
                android:textSize="@dimen/sp_30px" />

            <ImageView
                android:id="@+id/pay_tishiDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:src="@mipmap/icon_pro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/com_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款期限"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <TextView
                android:id="@+id/pay_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_200px"
                android:text="2016年12月18号"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_30px" />

        </LinearLayout>


        <TextView
            android:id="@+id/pay_startPay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_marginBottom="@dimen/height_40px"
            android:layout_marginLeft="@dimen/height_40px"
            android:layout_marginRight="@dimen/height_40px"
            android:layout_marginTop="@dimen/height_30px"
            android:background="@drawable/press_btn_nextstep"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="去还款"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
