<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_corner_white"
    android:orientation="vertical">

    <!-- 我要还款 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100px"
        android:background="@drawable/dialog_round_corner_app_top"
        android:gravity="center"
        android:text="我要还款"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_40px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_10px"
        android:padding="@dimen/com_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款总额"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="525元"
            android:textColor="@color/text_9999"
            android:textSize="@dimen/sp_30px" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/com_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款方式"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/dialog_style6_payWayLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_10px"
        android:background="@drawable/hollow_round_corner_app"
        android:orientation="horizontal"
        android:padding="@dimen/com_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建设银行(尾号2588)"
            android:textColor="@color/text_6666"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_30px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/com_left_right"
            android:src="@mipmap/icon_xl1" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/com_left_right"
        android:text="请确保您的余额充足，扣款失败将影响您的信用"
        android:textColor="@color/text_9999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100px"
        android:layout_marginTop="@dimen/height_40px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_style6_cancal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/press_btn_gray"
            android:text="取消" />

        <TextView
            android:id="@+id/dialog_style6_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_grey"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
